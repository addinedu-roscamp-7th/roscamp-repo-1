<launch>
    <!-- Gazebo 브링업 바로 실행 -->
    <include file="$(find my_package)/launch/gazebo_bringup.launch.xml" />

    <!-- 5초 후 bringup_launch 실행 (use_sim_time=True) -->
    <timer seconds="5.0">
        <include file="$(find my_package)/launch/bringup_launch.launch.xml">
            <arg name="use_sim_time" value="True"/>
        </include>
    </timer>

    <!-- 2초 후 nav2_view 실행 -->
    <timer seconds="7.0">
        <include file="$(find my_package)/launch/nav2_view.launch.xml" />
    </timer>
</launch>
