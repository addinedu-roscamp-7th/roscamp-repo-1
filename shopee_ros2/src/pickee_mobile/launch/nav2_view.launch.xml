<!-- Rviz에 시각화 -->
<?xml version='1.0' ?>

<launch>
    <arg name="namespace" default=""/>
    <arg name="rviz_config_file" default="$(find-pkg-share pickee_mobile)/rviz/nav2_view.rviz"/>

    <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_file)" namespace="$(var namespace)">
    </node>
</launch>    