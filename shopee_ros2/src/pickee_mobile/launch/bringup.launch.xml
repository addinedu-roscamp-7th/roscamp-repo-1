<?xml version='1.0' ?>

<launch>
    <arg name="use_sim_time" default="False"/>
    <arg name="filter_yaml_path" default="$(find-pkg-share pickee_mobile)/config/laser_filter.yaml" />

    <include file="$(find-pkg-share pickee_mobile)/launch/upload.launch.xml">
        <arg name="use_sim_time" value="$(var use_sim_time)"/>
    </include>

    <include file="$(find-pkg-share sllidar_ros2)/launch/sllidar_c1_launch.py">
    </include>

    <node pkg="pickee_mobile" exec="bringup">
    </node>
    
    <node pkg="laser_filters" exec="scan_to_scan_filter_chain">
        <param from="$(var filter_yaml_path)" />
    </node>
</launch>