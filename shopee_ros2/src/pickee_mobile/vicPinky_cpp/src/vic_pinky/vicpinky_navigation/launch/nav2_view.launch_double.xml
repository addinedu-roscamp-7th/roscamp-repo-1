<?xml version='1.0' ?>

<launch>
    <arg name="namespace" default=""/>
    <arg name="rviz_config_file" default="$(find-pkg-share vicpinky_navigation)/rviz/nav2_view.rviz"/>
    <arg name="use_sim_time" default="True"/>

    <node pkg="rviz2" exec="rviz2" output="screen" args="-d $(var rviz_config_file)">
        <param name="use_sim_time" value="$(var use_sim_time)"/>
        <remap from="/tf" to="$(var namespace)/tf"/>
        <remap from="/tf_static" to="$(var namespace)/tf_static"/>
        <ros-arg name="ros-args" value="--ros-args -r __ns:=$(var namespace)"/>
    </node>
</launch>    