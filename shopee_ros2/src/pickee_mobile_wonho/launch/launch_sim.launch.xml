<?xml version='1.0' ?>

<launch>
    <arg name="robot_name" default="pinky"/>
    <arg name="world_name" default="shopee_map.world"/>
    <arg name="world" default="$(find-pkg-share pickee_mobile_wonho)/worlds/$(var world_name)"/>
    <arg name="bridge_params" default="$(find-pkg-share pickee_mobile_wonho)/params/pinky_bridge.yaml"/>
    <!-- Gazebo 모델 경로 설정 -->
    <set_env name="GAZEBO_MODEL_PATH" 
            value="$(find-pkg-share pickee_mobile_wonho)/models:$(env HOME)/.gazebo/models"/>
    <set_env name="GZ_SIM_RESOURCE_PATH" 
            value="$(find-pkg-share pickee_mobile_wonho)/models:$(find-pkg-share pickee_mobile_wonho)/worlds:$(env HOME)/.gz/models:$(env HOME)/.gazebo/models"/>
    
    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name="gz_args" value="-r -s -v4 $(var world)"/>
        <arg name="on_exit_shutdown" value="true"/>
    </include>

    <include file="$(find-pkg-share ros_gz_sim)/launch/gz_sim.launch.py">
        <arg name='gz_args' value='-g -v4 '/>
    </include>

    <include file="$(find-pkg-share pickee_mobile_wonho)/launch/upload.launch.xml">
        <arg name='use_sim_time' value='True'/>
    </include>

    <!-- <node pkg="ros_gz_sim" exec="create" name='create' output='screen' args="-name $(var robot_name) -topic robot_description -x 4.0 -y 4.0 -z 0.3"> -->
    <node pkg="ros_gz_sim" exec="create" name='create' output='screen' args="-name $(var robot_name) -topic robot_description -x 5.5 -y 2.95 -z 0.3 -R 0 -P 0 -Y 1.57">
        <param name='use_sim_time' value='True'/>
    </node>

    <node pkg="ros_gz_bridge" exec="parameter_bridge" name='parameter_bridge' output='screen' args="--ros-args -p config_file:=$(var bridge_params)">
        
    </node>
    <node pkg="ros_gz_image" exec="image_bridge" name='image_bridge' output='screen' args="/camera/image_raw"/>
    <node pkg="ros_gz_image" exec="image_bridge" name='image_bridge' output='screen' args="/camera"/>
</launch>