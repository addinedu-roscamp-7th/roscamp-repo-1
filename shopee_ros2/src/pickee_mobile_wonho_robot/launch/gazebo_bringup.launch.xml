<?xml version='1.0' ?>

<launch>
    <arg name="use_sim_time" default="True"/>
    <arg name="filter_yaml_path" default="$(find-pkg-share pickee_mobile_wonho_robot)/config/laser_filter.yaml" />

    <include file="$(find-pkg-share pickee_mobile_wonho)/launch/launch_sim.launch.xml">
        <arg name="use_sim_time" value="$(var use_sim_time)"/>
    </include>
    
    <node pkg="laser_filters" exec="scan_to_scan_filter_chain">
        <param from="$(var filter_yaml_path)" />
        <param name="use_sim_time" value="$(var use_sim_time)"/>
    </node>

</launch>