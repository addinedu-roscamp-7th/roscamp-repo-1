# Shopee Main Service - Environment Variables
# 이 파일을 .env로 복사하여 사용하세요.

# ---------------------------------
# API Server Configuration
# ---------------------------------
SHOPEE_API_HOST=0.0.0.0
SHOPEE_API_PORT=5000

# ---------------------------------
# Database Configuration
# ---------------------------------
# 사용 예: mysql+pymysql://<user>:<password>@<host>:<port>/<dbname>
SHOPEE_DB_URL=mysql+pymysql://shopee:shopee@localhost:3306/shopee

# SQLAlchemy가 실행하는 SQL을 로그로 출력하려면 true로 설정
SHOPEE_DB_ECHO=false

# ---------------------------------
# LLM Service Configuration
# ---------------------------------
SHOPEE_LLM_BASE_URL=http://localhost:5001

# ---------------------------------
# Logging Configuration
# ---------------------------------
# DEBUG, INFO, WARNING, ERROR, CRITICAL 중 선택
SHOPEE_LOG_LEVEL=INFO

# 로그를 파일로 저장하려면 경로 지정 (예: /var/log/shopee_main.log)
# SHOPEE_LOG_FILE=
